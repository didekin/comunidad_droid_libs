<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--................ Action bar .............-->
    <style name="appBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/appBar_title</item>
    </style>

    <style name="appBarMenuItem" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_decription_widget</item>
    </style>

    <style name="optionMenuTextLarge"
           parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="optionMenuTextSmall"
           parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textSize">@dimen/text_hint_size</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="dropDownMenu" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">?attr/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--................. Buttons .............. -->
    <style name="textBase.acButton1">
        <item name="android:textSize">@dimen/text_decription_widget</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- ............... Dialogs ................-->
    <style name="alertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/deep_orange_600</item>
        <item name="android:textColorPrimary">@color/purple_900</item>
    </style>

    <!-- ............... Drawers ................-->   <!--TODO: en librerÃ­a.-->
    <style name="drawerMainHeaderLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingEnd">@dimen/drawer_padding</item>
        <item name="android:paddingStart">@dimen/drawer_padding</item>
    </style>

    <!-- .............. EditTextFields ......... -->
    <style name="textBase.editField">
        <item name="android:textSize">@dimen/text_hint_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="textBase.editField.email">
        <item name="android:maxEms">60</item>
        <item name="android:inputType">textEmailAddress|textNoSuggestions</item>
        <item name="android:hint">@string/email_hint</item>
    </style>

    <style name="textBase.editField.password">
        <item name="android:maxEms">50</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/usuario_password_hint</item>
    </style>

    <style name="textBase.editField.alias">
        <item name="android:maxEms">30</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:hint">@string/usuario_alias_hint</item>
    </style>

    <style name="textBase.editField.description">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">10</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:maxEms">250</item>
        <item name="android:inputType">textNoSuggestions|textCapSentences|textMultiLine</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- ............... FloatingActionButton ................-->
    <style name="floatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- ................... Layouts .......... -->
    <style name="baseLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="baseLayout.scroll">
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="baseLayout.withPadding">
        <item name="android:padding">4dp</item>
    </style>

    <!-- ................ Spinners ............. -->
    <style name="spinnerBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spinner_horizontal_margin</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <!-- ............. Text fields ........... -->
    <style name="textBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="textBase.textFieldLabel1">
        <item name="android:textSize">@dimen/text_decription_widget</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textBase.textFieldLabel2">
        <item name="android:textSize">@dimen/text_hint_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textBase.textPageLabel2">
        <item name="android:textSize">@dimen/text_rotulo_list</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
    </style>

    <style name="textBase.textPageLabel1">
        <item name="android:textSize">@dimen/text_rotulo_fragment</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="textBase.activityLink1">
        <item name="android:textSize">@dimen/text_hint_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>